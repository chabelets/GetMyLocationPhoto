<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_editor">

    <EditText
        android:id="@+id/headlineEditTextAddPhotoActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter headline"/>

    <EditText
        android:id="@+id/descriptionEditTextAddPhotoActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text"/>

    <Button
        android:id="@+id/saveButtonAddPhotoActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"/>

    <ImageView
        android:id="@+id/photoImageViewAddPhotoActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/placeholder"/>

</LinearLayout>